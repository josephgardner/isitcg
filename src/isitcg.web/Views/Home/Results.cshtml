@{
ViewData["Title"] = "Results - Is It CG?";
}
@model MatchResults

<div class="titlebar">

    <div>
        <h1>
            @if (Model.Result == "danger")
            {
            <span>Uh Oh, this product is not CG Approved.</span><br><p> No worries! <a href="http://isitcg.lisagardnerdesign.com/favorite-products-2019/" target="_blank">Click here to see some of our favorite products that are approved</a></p>
            }
            else if (Model.Result == "warning")
            {
            <span>Congrats, this product is CG Approved, but contains some ingredients that may not work for
                everyone!</span>
            }
            else
            {
            <span>Congrats, this product is CG Approved!</span>
            }
            </h3>
            <p>See below for a breakdown of the ingredients</p>
    </div>
    <p>
        @if (!string.IsNullOrEmpty(Model.Hash))
        {
        <a href="/edit/@Model.Hash" class="btn btn-primary btn-lg" role="button">
            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Edit
        </a>
        }
        <a href="/" class="btn btn-primary btn-lg" role="button">
            <span class="glyphicon glyphicon-repeat" aria-hidden="true"></span> Start Over
        </a></p>
    @if (!string.IsNullOrEmpty(Model.ProductName))
    {
    <div class="productname">@Model.ProductName</div>
    }
</div>

@foreach (var match in Model.Matches)
{

<div class="panel panel-@match.Result">
    <!-- Default panel contents -->

    <div class="panel-heading">
        @if (match.Result == "danger")
        {
        <span>Not CG Approved</span>
        }
        else if (match.Result == "warning")
        {
        <span>CG Approved with caution</span>
        }
        else
        {
        <span>CG Approved</span>
        }
    </div>

    <div class="panel-body">
        <h4 class="card-title">@match.Name</h4>
        <p class="card-text">@match.Description</p>
    </div>

    <!-- List group -->
    <ul class="list-group">
        @foreach (var item in @match.Ingredients)
        {
        <li class="list-group-item">@item</li>
        }
    </ul>
</div>

}


<div class="panel panel-primary">
    <!-- Default panel contents -->
    <div class="panel-heading">Probably OK</div>
    <div class="panel-body">
        <h4 class="card-title">Remaining Ingredients</h4>
        <p class="card-text">These ingredients are either OK to use, or weren't an exact match for those to
            avoid.</p>
    </div>

    <!-- List group -->
    <ul class="list-group">
        @foreach (var item in Model.Remainder)
        {
        <li class="list-group-item">@item</li>
        }
    </ul>
</div>
